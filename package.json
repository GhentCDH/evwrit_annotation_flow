{
  "name": "combined_vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm install && vite ",
    "dev:local": "DEV=local vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "deploy": "run-s build && rm -r deploy && cp -r dist/ deploy",
    "deploy:dev": "git pull && cp -r deploy/* /var/www/dev.evwrit.ugent.be/annotation_flow",
    "preview": "vite preview",
    "preview:dev": "vite preview  --config vite.config.dev.ts",
    "build-only": "vite build --config vite.config.dev.ts",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint src/.",
    "lint:fix": "eslint src/. --fix",
    "prepare": "husky install",
    "lint:staged": "lint-staged --allow-empty",
    "test:unit": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@ghentcdh/vue-component-annotated-text": "2.0.0-beta.6",
    "@heroicons/vue": "^2.2.0",
    "@rollup/rollup-linux-arm64-gnu": "^4.43.0",
    "@vueuse/core": "^13.3.0",
    "axios": "^1.9.0",
    "diff": "^8.0.2",
    "express": "^5.1.0",
    "lodash-es": "^4.17.21",
    "marked": "^15.0.12",
    "pinia": "^3.0.3",
    "tokenizr": "^1.7.0",
    "uuid": "^11.1.0",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.11.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tsconfig/node20": "^20.1.5",
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.0.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/eslint-plugin": "^1.2.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^4.12.24",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vue": "^10.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.5",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.3",
    "vue-tsc": "^2.2.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint:staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,vue,mts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.8.1"
}
