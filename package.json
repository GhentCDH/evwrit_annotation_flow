{
  "name": "combined_vue",
  "version": "1.1.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "DEV=local vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "deploy": "run-s build && rm -r deploy && cp -r dist/ deploy",
    "deploy:dev": "git pull && cp -r deploy/* /var/www/dev.evwrit.ugent.be/annotation_flow",
    "preview": "vite preview",
    "preview:dev": "vite preview  --config vite.config.dev.ts",
    "build-only": "vite build --config vite.config.dev.ts",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint src/.",
    "lint:fix": "eslint src/. --fix",
    "prepare": "husky install",
    "lint:staged": "lint-staged --allow-empty",
    "test:unit": "vitest",
    "test:coverage": "vitest --coverage",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "dependencies": {
    "@ghentcdh/annotated-text": "^0.12.20",
    "@heroicons/vue": "^2.2.0",
    "@rollup/rollup-linux-arm64-gnu": "^4.52.4",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "d3": "^7.9.0",
    "diff": "^8.0.2",
    "express": "^5.1.0",
    "keycloak-js": "^26.2.2",
    "linkify-it": "^5.0.0",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "marked": "^16.4.0",
    "mdurl": "^2.0.0",
    "pinia": "^3.0.3",
    "tokenizr": "^2.1.1",
    "uuid": "^13.0.0",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.14.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tsconfig/node20": "^20.1.6",
    "@types/jsdom": "^27.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.19",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "daisyui": "^4.12.24",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "sass": "^1.93.2",
    "sass-loader": "^16.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10",
    "vitest": "^2.1.9",
    "vue-tsc": "^2.2.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint:staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,vue,mts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.2"
}
